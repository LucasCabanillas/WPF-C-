<Page x:Class="Proyecto.VistaStock.AgregarProductoStockPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Proyecto.VistaStock"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AgregarProductoStockPage">

    <Grid Background="#2d3250">
        <Label Content="Modificar producto" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="20" Foreground="White" FontWeight="Bold"/>
        <Button x:Name="btnVolver" Content="Volver" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="80"  Height="30" Margin="10,10,0,0"  Grid.Row="0" Grid.Column="0"  Style="{StaticResource ButtonStyle}"  Click="btnVolver_Click" FontWeight="Bold"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
            <TextBlock Text="Nombre del Producto:" FontWeight="Bold" Foreground="White"/>
            <TextBox x:Name="txtNombreProducto" Width="250" Margin="10" Style="{StaticResource TextBoxStyle}"/>

            <TextBlock Text="Precio:" FontWeight="Bold" Foreground="White"/>
            <TextBox x:Name="txtPrecio" Width="250" Margin="10" Style="{StaticResource TextBoxStyle}"/>

            <TextBlock Text="Cantidad:" FontWeight="Bold" Foreground="White"/>
            <TextBox x:Name="txtCantidad" Width="250" Margin="10" Style="{StaticResource TextBoxStyle}"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"  Margin="10">
                <Button Content="Guardar"  Click="GuardarProducto_Click" Style="{StaticResource ButtonStyle}" FontWeight="Bold" Height="40" Width="120"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
