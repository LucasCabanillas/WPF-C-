<Page x:Class="Proyecto.Viws.GenerarPdfPedidosPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Proyecto.Viws"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Generar PDF de Pedidos">
    

    <Grid Background="Black">
        <Label Content="Proximamente" Foreground="Wheat" FontSize="50" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Button x:Name="btnGenerarPDF" 
                Content="Generar PDF" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Width="150" 
                Height="50" 
                FontSize="16"
                Visibility="Collapsed"
                Click="btnGenerarPDF_Click"/>
    </Grid>
</Page>
