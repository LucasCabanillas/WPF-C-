<Page x:Class="Proyecto.Viws.Pedidos"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Proyecto.Viws"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Pedidos">

    <Border Background="#2d3250">
        <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Label Content="Pedidos" HorizontalAlignment="Center" FontSize="20" FontFamily="italic" FontWeight="Bold" VerticalAlignment="Top" Foreground="White"/>

            <DataGrid x:Name="datagridusuarios" AutoGenerateColumns="False"  IsReadOnly="True"   d:ItemsSource="{d:SampleData ItemCount=5}" VerticalAlignment="Center" HorizontalAlignment="Stretch" Background="Transparent" Padding="0,0,0,0" >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Telefono" Binding="{Binding telefono}" />
                    <DataGridTextColumn Header="Fecha del pedido" Binding="{Binding fechaRealizoPedido}" />
                    <DataGridTextColumn Header="Apellido" Binding="{Binding apellido}" />
                    <DataGridTextColumn Header="Fecha de nacimiento" Binding="{Binding fechaDeNacimiento}" />
                    <DataGridTextColumn Header="Telefono" Binding="{Binding telefono}" />
                    <DataGridTextColumn Header="Email" Binding="{Binding email}" />
                    <DataGridTextColumn Header="Domicilio" Binding="{Binding domicilio}" />
                    <DataGridTextColumn Header="Localidad" Binding="{Binding localidad}" />
                    <DataGridTextColumn Header="Provincia" Binding="{Binding provincia}" />
                    <DataGridTextColumn Header="Fecha de contratacion" Binding="{Binding fechaDeContratacion}" />
                    <DataGridTextColumn Header="Tipo de contrato" Binding="{Binding tipoDeContrato}" Width="100"/>
                    <DataGridTextColumn Header="Rango" Binding="{Binding rango}" Width="65"/>
                </DataGrid.Columns>
            </DataGrid>

            <Button x:Name="btnCargar" Content="Agregar" Style="{StaticResource ButtonStyle}"  Height="45" Width="128" HorizontalAlignment="Left" Margin="100,0,0,50" VerticalAlignment="Bottom" FontWeight="Bold" Click="btnCargarr_Click"/>

            <Button x:Name="btnModificar" Content="Modificar" Style="{StaticResource ButtonStyle}" Height="45" Width="128" HorizontalAlignment="Center" Margin="0,337,0,50" VerticalAlignment="Bottom" FontWeight="Bold"/>

            <Button x:Name="btnEliminar" Content="Elimnar" Style="{StaticResource ButtonStyle}"  Height="45" Width="128" HorizontalAlignment="Right" Margin="0,0,100,50" VerticalAlignment="Bottom" FontWeight="Bold"/>
            
            <Frame x:Name="framePedidos"></Frame>
        </Grid>
    </Border>
</Page>
